@model IEnumerable<DataLayer.Feature>

@{
    ViewBag.Title = "لیست ویژگی";
    Layout = "~/Areas/Admin/Views/Shared/_DefultLayout.cshtml";
}

 <h2>لیست ویژگی</h2>
<hr />

<p>
    <a href="@Url.Action("Create")"class="btn btn-success">افزودن ویژگی</a>
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FeatureTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FeatureTitle)
        </td>
        <td>
            <a href="@Url.Action("Edit",new { id = item.FeatureID })" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a> |
            @*@Html.ActionLink("Details", "Details", new { id = item.FeatureID }) |*@
            <a href="@Url.Action("Delete",new {id=item.FeatureID })" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
}

</table>
