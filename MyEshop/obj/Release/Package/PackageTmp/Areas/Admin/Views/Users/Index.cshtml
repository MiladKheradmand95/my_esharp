@model IEnumerable<DataLayer.User>

@{
    ViewBag.Title = "کاربران";
}

<h2>لیست کاربران</h2>

<p>
    <a href="/Admin/users/Create" class="btn btn-primary">اضافه کردن کاربر</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role.RoleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role.RoleTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @item.RegisterDate.Toshamsi()
        </td>
        
        <td>
            <a href="/Admin/users/Edit/@item.UserID" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a> |
            <a href="/Admin/users/Delete/@item.UserID" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
}

</table>
