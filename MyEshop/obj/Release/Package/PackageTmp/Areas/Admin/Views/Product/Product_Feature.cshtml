@model DataLayer.Product_Feature

@{
    ViewBag.Title = "ویژگی محصول";
    Layout = "~/Areas/Admin/Views/Shared/_DefultLayout.cshtml";
}

<h2>ویژگی محصول</h2>
<hr />
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.ProductID)
        @Html.AntiForgeryToken()
        <div class="col-md-4">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.FeatureID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("FeatureID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FeatureID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="ثبت ویژگی" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="col-md-8">
        @{
            List<Product_Feature> list = ViewBag.Feature;
            <table class="table table-bordered">
                <tr>
                    <th>ویژگی</th>
                    <th>مقدار</th>
                    <th></th>
                </tr>
                @foreach (var item in list)
                {
                    <tr  id="feacher_@(item.PF_ID)">
                        <td>
                            @item.Feature.FeatureTitle
                        </td>
                        <td>
                            @item.Value
                        </td>
                        <td>
                            <a onclick="DeleteFeateur(@item.PF_ID)" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                        </td>
                    </tr>
                }

            </table>
        }
    </div>

</div>

<div>
    @Html.ActionLink("بارگشت به لیست", "Index")
</div>

@section scripts{
    <script>
        function DeleteFeateur(id) {
            if (confirm("آیا از حذف راضی هستید؟")) {
                $.get("/Admin/Product/Delete_Product_Feature/" + id,
                    function () {
                        $("#feacher_" + id).hide('slow');
                    })
            }
        }
    </script>
    }
